@model IEnumerable<BE.Models.User>

@{
    ViewData["Title"] = "Admin";
}

<h1>Admin</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()==0)
        {
            <tr>
                <td colspan="9" style="color:red">Not match found!</td>
            </tr>
        }
        else
        {
        @foreach (var item in Model) {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JoinDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                    <ul class="navbar-nav flex-grow-1">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-labeled btn-success"><span class="btn-label"><i class="fa fa-info"></i>Info</span></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-labeled btn-info"><span class="btn-label"><i class="fa fa-edit"></i>Edit</span></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-labeled btn-danger"><span class="btn-label"><i class="fa fa-trash"></i>Delete</span></a>
                    </ul>
                    </td>
            </tr>
            }
        }
    </tbody>
</table>
