@model BE.Models.QuestionOptionsViewModel

@{
    ViewData["Title"] = "Question";
}

<h1>Question</h1>

@foreach (var question in Model.Questions)
{
    <div>
        <h4>Question: @question.Title</h4>
        <hr />
        <div>
            <h3>Options:</h3>
            <ul>
                @foreach (var option in question.Options)
                {
                    <li>@option.Title</li>
                }
            </ul>
        </div>
        <dl class="row">
            <dt class="col-sm-2">Correct Answer:</dt>
            <dd class="col-sm-10">@question.CorrectAnswer</dd>
        </dl>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Questions?.FirstOrDefault()?.Id" class="btn btn-primary me-2">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
